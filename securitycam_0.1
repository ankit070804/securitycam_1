import cv2
cap=cv2.VideoCapture(0)
vid_cap=cv2.CascadeClassifier(r"C:\Users\singh\AppData\Local\Programs\Python\Python312\Lib\site-packages\cv2\data\haarcascade_frontalface_default.xml")
while True:
    ret,frame=cap.read()
    gray=cv2.cvtColor(frame,cv2.COLOR_BGR2GRAY)
    faces=vid_cap.detectMultiScale(
    gray,
    scaleFactor=1.1,
    minNeighbors=5,
    minSize=(30,30),
    flags=cv2.CASCADE_SCALE_IMAGE
    )
    for (x,y,w,h) in faces:
        cv2.rectangle(frame,(x,y),(x+w,y+h),(255,0,255),3)
    cv2.imshow("ankit",frame)
    if cv2.waitKey(30)==ord('a'):
        break
cap.release()
cv2.destroyAllWindows()
